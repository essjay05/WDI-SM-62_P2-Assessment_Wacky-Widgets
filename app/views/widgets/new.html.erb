<div class="index">
    <div class="jumbotron">
        <h1 class="display-4">Wacky Widgets</h1>
    </div>

    <div class="container">
        <% if @widgets == [] %>
            <h3 class="display-4">No Widgets Exist</h3>
        <% else %>
            <h3> Widgets DO exist </h3>
        <% end %>
    </div>
</div>

<hr>

<h4>Add a New Widget:</h4>

<%= form_for(@widget, url: widgets_path) do |f| %>  
    <div class="form-group">
        <%= f.label :description, 'Description*' %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :quantity, 'Quantity*' %>
        <%= f.text_field :quantity, class: 'form-control' %>
    </div>

    <%= f.submit 'Add Widget', class: 'btn btn-success' %>
<% end %>