<div class="index">
    <div class="jumbotron">
    <h1 class="display-4">Wacky Widgets</h1>
    </div>

    <div class="container">
    <h3 class="display-4">No Widgets Exist</h3>
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Description</th>
      <th scope="col">Quantity</th>
      <th scope="col">Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @widgets.each do |w| %>
        <tr>
        <td><%= w.description %></td>
        <td><%= w.quantity %></td>
        <td>
        <a href="/widgets/<%= w.id %>", data-method="delete", class="btn btn-xs btn-danger">X</a>
        
    
        </td>
        </tr>
    <% end %>

  </tbody>
</table>






